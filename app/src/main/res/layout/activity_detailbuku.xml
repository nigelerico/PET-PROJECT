<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Detailbuku"
    android:background="#eae7e7"
   >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:id="@+id/imageview"
                        android:layout_width="200dp"
                        android:layout_height="180dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                         />

                    <TextView
                        android:id="@+id/judulBuku"
                        android:textColor="@color/colorBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Judul Buku"
                        android:layout_marginTop="5dp"
                        android:textSize="20dp"
                        android:layout_below="@id/imageview"/>

                    <TextView
                        android:id="@+id/pengarang_buku"
                        android:textColor="#afafaf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="pengarang"
                        android:layout_marginTop="5dp"
                        android:layout_below="@id/judulBuku"/>

                    <TextView
                        android:id="@+id/harga_buku"
                        android:textColor="@color/colorAccent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Harga Buku"
                        android:layout_marginTop="5dp"
                        android:textSize="17sp"
                        android:layout_below="@id/pengarang_buku"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">



                    <TextView
                        android:id="@+id/tulisanbiasa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Detail Buku :"
                        android:textColor="@color/colorBlack"
                        android:textSize="17sp"
                        />


                    <TextView
                        android:id="@+id/kategori"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kategori"
                        android:textColor="@color/colorBlack"
                        android:layout_below="@id/tulisanbiasa"
                        android:layout_marginTop="5dp"
                        />

                    <TextView
                        android:id="@+id/uk_buku"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ukuran Buku"
                        android:textColor="@color/colorBlack"
                        android:layout_below="@id/kategori"
                        android:layout_marginTop="5dp"
                        />

                    <TextView
                        android:id="@+id/kulit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="kulit"
                        android:textColor="@color/colorBlack"
                        android:layout_below="@id/uk_buku"
                        android:layout_marginTop="5dp"
                        />


                    <TextView
                        android:id="@+id/thn_terbit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="tahun terbit"
                        android:textColor="@color/colorBlack"
                        android:layout_below="@id/kulit"
                        android:layout_marginTop="5dp"
                        />

                    <TextView
                        android:id="@+id/jml_hal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="jml hal"
                        android:textColor="@color/colorBlack"
                        android:layout_below="@id/thn_terbit"
                        android:layout_marginTop="5dp"
                        />

                    <TextView
                        android:id="@+id/bahan_isi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="bahan isi"
                        android:textColor="@color/colorBlack"
                        android:layout_below="@id/jml_hal"
                        android:layout_marginTop="5dp"
                        />

                    <TextView
                        android:id="@+id/bahan_kulit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="bahan Kulit"
                        android:textColor="@color/colorBlack"
                        android:layout_below="@id/bahan_isi"
                        android:layout_marginTop="5dp"
                        />

                    <TextView
                        android:id="@+id/stok"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Stok"
                        android:textColor="@color/colorBlack"
                        android:layout_below="@id/bahan_kulit"
                        android:layout_marginTop="5dp"
                        />

                    <TextView
                        android:id="@+id/halisi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="halisi"
                        android:textColor="@color/colorBlack"
                        android:layout_below="@id/stok"
                        android:layout_marginTop="5dp"
                        />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:layout_marginTop="10dp"
            app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">


            <TextView
                android:id="@+id/tulisanbiasa2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsi :"
                android:textColor="@color/colorBlack"
                android:textSize="17sp"/>


            <TextView
                android:id="@+id/deskripsi_buku"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsi "
                android:textColor="@color/colorBlack"
                android:layout_marginTop="5dp"
                android:layout_below="@id/tulisanbiasa2"/>

        </RelativeLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/button_tambah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_cart"
            android:text="Tambah ke Keranjang"
            android:drawableLeft="@drawable/ic_add_shopping_cart_white_24dp"
            android:textColor="#ffffff"
            android:paddingLeft="75dp"
            android:paddingRight="75dp"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            />


    </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>